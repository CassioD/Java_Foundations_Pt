<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 
  VBox como container principal, alinhando os elementos verticalmente e no centro.
  O controlador 'UserManagementController' é associado a esta view.
-->
<VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ui.UserManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <!-- Título da tela de cadastro. -->
        <Label text="Cadastro de Usuário">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <!-- 
          GridPane é um layout flexível que organiza seus filhos em uma grade de linhas e colunas.
          É ideal para formulários. 'hgap' e 'vgap' definem o espaçamento entre as células.
        -->
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <!-- A primeira coluna é para os rótulos (Labels). -->
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                <!-- A segunda coluna é para os campos de entrada (TextFields, etc.). -->
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <!-- As definições de linha são opcionais, mas podem ajudar a controlar a altura. -->
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- Linha 0: Nome Completo -->
                <Label text="Nome Completo:" />
                <TextField fx:id="fullNameField" GridPane.columnIndex="1" />
                
                <!-- Linha 1: CPF -->
                <Label text="CPF:" GridPane.rowIndex="1" />
                <TextField fx:id="cpfField" promptText="000.000.000-00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <!-- Linha 2: E-mail -->
                <Label text="E-mail:" GridPane.rowIndex="2" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                
                <!-- Linha 3: Cargo -->
                <Label text="Cargo:" GridPane.rowIndex="3" />
                <TextField fx:id="jobTitleField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                
                <!-- Linha 4: Login -->
                <Label text="Login:" GridPane.rowIndex="4" />
                <TextField fx:id="loginField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                
                <!-- Linha 5: Senha -->
                <Label text="Senha:" GridPane.rowIndex="5" />
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                
                <!-- Linha 6: Perfil -->
                <Label text="Perfil:" GridPane.rowIndex="6" />
                <ComboBox fx:id="profileComboBox" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            </children>
        </GridPane>
        
        <!-- Botão para salvar os dados do formulário. -->
        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveUserAction" prefWidth="100.0" text="Salvar" />
        
        <!-- Label para exibir mensagens de status ao usuário. -->
        <Label fx:id="statusLabel" />
    </children>
</VBox>